<!DOCTYPE html>
<html>
  <head>
    <title>Forum</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul>
        <li><%= link_to 'Home', root_path %></li>
        <% if current_user.nil? %>
          <li><%= link_to 'Sign up', new_user_path %></li>
          <li><%= link_to 'Sign in', new_user_session_path %></li>
        <% else %>
          <li><%= link_to 'Private Area', private_area_path %></li>
          <li><%= link_to 'Sign out', user_session_path(current_user.id), method: :delete %></li>
        <% end %>
      </ul>
    </nav>

    <% flash.each do |key, value| %>
  		<div class="alert alert-<%= key %>" style="background-color: cornsilk; padding: 0.5em">
  			<%= value %>
  		</div>
  	<% end %>

    <%= yield %>
  </body>
</html>
