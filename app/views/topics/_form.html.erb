<%= form_with(model: topic, local: true) do |form| %>
  <%= render 'shared/errors', object: topic %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 10, class: 'form-control' %>
  </div

  <div class="actions">
    <%= form.submit 'Save', class: 'btn btn-lg btn-primary' %>
  </div>
<% end %>
